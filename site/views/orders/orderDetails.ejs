<!DOCTYPE html>
<html dir="ltr" lang="es">

<head>
	<%- include('../layout/head', { title:"Pedido" }) %>
</head>

	<body class="stretched">

		<!--Cart Panel -->
		<%- include('../layout/panelCart') %>

		<!-- Create Shop Modal -->
		<% if(currentUser && currentUser.role=='buyer' ){ %>
			<%- include('../layout/create-shop-modal') %>
		<% } %>
		
		<!-- Header -->
		<header id="header" class="dark" data-sticky-class="dark-color" data-sticky-shrink-offset="0" data-mobile-sticky="true">
			<%- include('../layout/header') %>
		</header>

		<!-- Page Title -->
		<section id="page-title" class="checkout-page-title page-title-parallax page-title-dark" data-bottom-top="background-position:0px 0px;" data-top-bottom="background-position:0px 0px;">
			<%- include('../pages/pageTitle' , { title:"Tu Pedido", page:"Pedido" }) %>
		</section>

			<!-- Content
			============================================= -->
			<section id="dark-content" class="dark noborder">
				<section class="bg-img-register dark noborder parallax pt-3">
				<div class="content-wrap">
					<div class="container clearfix">

						<!-- Links login -->
						<div class="row col-mb-30 gutter-50 mb-4">
							<div class="col-md-12">
								<% if(currentUser == null) { %>
									<div class="alert style-msg style-msg-light" style="background-color: #333;">
										<button type="button" class="close text-white" data-dismiss="alert" aria-hidden="true">×</button>
										<i class="icon-line-user-check text-white" style="font-size: 20px;"></i>
										<strong class="text-white"> Con tu pedido creamos una cuenta temporalmente para vos. </strong>
										<a href="/users/login" class="btn btn-outline-warning alert-link float-right mt-2 mr-3">Iniciar sesión</a>
										<br>
										<small class="text-white">Recorda ingresar con tu email tanto en el campo de email como de contraseña.</small>
										
									</div>
								<% } %> 
								<!-- Notifications -->
								<%- include('../layout/notifications') %>
							</div>
						</div>

		
						<!-- Checkout Form -->
						<div class="row col-mb-30 gutter-50 mb-4">
							<div class="col-lg-6 col-md-12">
								<h3 class="mb-0">Dirección de Facturación</h3><small>Los campos como * son obligatorios.</small>
								<!-- User Data -->
								<div class="row">
									
									<div class="col-12 form-group">
										<label for="billingMessage">Aclaraciones:</label>
										<textarea class="sm-form-control" id="billingMessage" name="billingMessage" placeholder="Menciona si tienes un requerimiento especifico para tu envío" rows="6" cols="30"></textarea>
									</div>
								</div>

								<!-- Shipping Address -->
								<div class="accordion clearfix accordion-border" data-state="closed">
									<div class="accordion-header">
										<div class="accordion-icon">
											<i class="accordion-closed icon-line-minus"></i>
											<i class="accordion-open icon-line-check"></i>
										</div>
										<div class="accordion-title color">
											Enviar a una dirección diferente?
										</div>
									</div>
									<div class="accordion-content clearfix">
										<h3 class="mb-0">Datos de Envío</h3><small>Los campos como * son obligatorios.</small>
										<div class="row">
											<div class="col-md-6 form-group">
												<label for="shippingCountry">*País:</label>
												<select type="text" id="shippingCountry" name="shippingCountry"  class="sm-form-control custom-select" requi>
													<option value="Arg">Argentina</option>
												</select>
											</div>
	
											<div class="col-md-6 form-group">
												<label for="shippingProvince">*Provincia</label>
												<input type="text" id="shippingProvince" name="shippingProvince"  class="sm-form-control" requi/>
											</div>
	
											<div class="col-md-6 form-group">
												<label for="shippingCity">*Ciudad</label>
												<input type="text" id="shippingCity" name="shippingCity"  class="sm-form-control" requi/>
											</div>
	
											<div class="col-md-6 form-group">
												<label for="shippingPostalCode">*Código postal</label>
												<input type="text" id="shippingPostalCode" name="shippingPostalCode" class="sm-form-control" requi/>
											</div>
	
											<div class="col-12 form-group">
												<label for="shippingAddress">*Dirección:</label>
												<input type="text" id="shippingAddress" name="shippingAddress"  class="sm-form-control" requi/>
											</div>
											<div class="col-12 mb-3">
												<div class="form-check form-check-inline">
													<input class="form-check-input" type="checkbox" id="shippingCheck" name="shippingCheck" value="1" requi>
													<label class="form-check-label nott ls0 mb-0 font-weight-semibold" 
													for="shippingCheck">Por favor confirme el envio del producto a esta dirección *</label>
												</div>
											</div>	
										</div>
									</div>
								</div>
							</div>

							<!-- Details Order -->
							<div class="col-lg-6 col-md-12">
								<h3 class="mb-5">Detalle de Compra</h3>
								<div class="row">
									<div class="col-12">
										<div class="table-responsive mb-0">
											<table id="table-cart" class="table">
												<thead>
													<tr>
														<th class="cart-product-thumbnail">IMAGEN</th>
														<th class="cart-product-name">PRODUCTO</th>
														<th class="cart-product-price center">PRECIO</th>
														<th class="cart-product-price center">DESC</th>
														<th class="cart-product-quantity">CANTIDAD</th>
														<th class="cart-product-subtotal center">TOTAL</th>
													</tr>
												</thead>
												<tbody>
													
												</tbody>
											</table>
										</div>
									</div>
									
								</div>
								
							</div>
							<div class="col-12 form-group text-center">
								<button type="submit" class="button button-rounded button-reveal button-large color button-border button-white text-right">
									<i class="icon-line-arrow-right"></i><span>Finalizar Pedido</span>
								</button>
							</div>
						</div>
					</div>
				</div>
			</section><!-- #content end -->

			<!-- Footer -->
			<%- include('../layout/footer') %>
		
	</body>	
</html>