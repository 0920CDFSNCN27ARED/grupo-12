<!DOCTYPE html>
<html dir="ltr" lang="es">

<head>
	<%- include('../layout/head', { title:"Perfil de Negocio" }) %>
	<link rel="stylesheet" href="/css/components/bs-datatable.css" type="text/css" />
</head>

<body class="stretched">

	<!--Cart Panel -->
	<%- include('../layout/panelCart') %>

	<!-- Header -->
	<header id="header" class="dark" data-sticky-class="dark-color" data-sticky-shrink-offset="0"
		data-mobile-sticky="true">
		<%- include('../layout/header') %>
	</header>

	<!-- Page Title 
	<section id="page-title" class="checkout-page-title page-title-parallax page-title-dark"
		data-bottom-top="background-position:0px 0px;" data-top-bottom="background-position:0px 0px;">
		<%- include('../pages/pageTitle' , { title:"Perfil Administrador", page:"Perfil" }) %>
	</section> -->

	<!-- Content -->
	<section id="dark-content" class="dark noborder parallax pt-3">
		<div class="content-wrap">
			<div class="container clearfix">
	
				<div class="row clearfix">
	
					<div class="col-md-12">
						
							<img src= "/images/users/<%= admin.avatar%>" class="alignleft img-circle img-thumbnail my-0" alt="Avatar"
							style="max-width: 84px;">
	
						<div class="heading-block border-0">
							<h3><%= admin.name %></h3>
							<small class="m-0"><%= admin.email %></small><br>
							<small class="m-0"><span class="badge badge-pill badge-warning">Administrador</span></small>

						</div>
						
						<div class="clear"></div>
	
						<div class="row clearfix">
	
							<div class="col-lg-12">
	
								<div class="tabs tabs-alt clearfix" id="tabs-profile">
	
									<ul class="tab-nav clearfix">
										<li><a href="#tab-users"><i class="icon-users"></i> Usuarios</a></li>
									</ul>
	
									<div class="tab-container">
										
										<% if(typeof errors !='undefined' ) { %>
											<div class="col-12">
												<ul>
													<% errors.forEach(error=> { %>
														<li class="text-danger">
															<%= error.msg %>
														</li>
														<% });%>
												</ul>
											</div>
										<% } %>
										
										<div class="tab-content clearfix" id="tab-users">
											<a href="/admin/create-user" class="btn btn-warning float-right mb-5">Crear Usuario</a>
											<div class="table-responsive">
												<table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
													<thead>
														<tr>
															<th>#</th>
															<th>ID</th>
															<th>Nombre</th>
															<th>User Name</th>
															<th>Email</th>
															<th>TÃ©lefono</th>
															<th>Admin</th>
															<th>Estado</th>
															<th>Rol</th>
															<th>Shop Id</th>
															<th class="text-center">Opciones</th>
														</tr>
													</thead>
													<tbody>
														<% users.forEach((user, index) => { %>
															<tr>
																<td><small><%= index +1 %></small></td>
																<td><small><%= user.id %></small></td>
																<td><small><%= user.name %></small></td>
																<td><small><%= user.userName %></small></td>
																<td><small><%= user.email %></small></td>
																<td><small><%= user.phone %></small></td>
																<td><small><%= user.admin == 1 ? "SI" : "NO" %></small></td>
																<td>
																	<% if(user.status == "active") { %>
																		<small><span class="badge badge-pill badge-success">ACTIVO</span></small>
																	<% } else { %>  
																		<small><span class="badge badge-pill badge-danger">BLOQUEDO</span></small>
																	<% } %>
																</td>
																<td>
																	<% if(user.role == "seller") { %>
																		<small><span class="badge badge-pill badge-success">VENDEDOR</span></small>
																	<% } else { %>  
																		<small><span class="badge badge-pill badge-warning">COMPRADOR</span></small>
																	<% } %>
																</td>
																<td><small><%= user.shopId != null ? user.shopId : "Sin Negocio" %></small></td>
																<td class="text-center">
																	<span><a href="/admin/<%= user.id %>/user-profile"><i class="icon-eye"></i>&nbsp;</a></span>
																	<span><a href="/admin/<%= user.id %>/edit-user-data"><i class="icon-pencil2"></i>&nbsp;</a></span>
																	<!-- <form action="/users/delete/<= user.id %>?_method=DELETE" method="POST">
																		<span><a type="submit"><i class="icon-line-trash-2"></i></a></span>
																	</form> -->
																</td>
															</tr>
														<% });%>
													</tbody>
												</table>
											</div>
										</div>
										
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="w-100 line d-block d-md-none"></div>
				</div>
			</div>
		</div>
	</section><!-- #content end -->

	

	<!-- Footer -->
	<%- include('../layout/footer') %>
	<script src="/js/components/bs-datatable.js"></script>
	<script>
		$(document).ready(function () {
				$('#datatable1').dataTable();
				$('#datatable2').dataTable();
		});
	</script>

</body>

</html>