<!-- Update Payment Modal-->
<% orders.forEach((order)=> { %>
    <div class="modal fade" id="<%= `editOrderModal${order.id}` %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-body">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Actualizar Orden</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <form action="/admin/<%= order.id %>/edit-order?_method=PUT" method="POST" class="pb-0 mb-0">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 form-group">
                                    <label for="name">* Nombre:</label>
                                    <input type="text" name="name" value="<%= order.name %>" class="form-control" />
                                </div>
                                <div class="col-lg-12 col-md-12 form-group">
                                    <label for="description">* Descripci√≥n:</label>
                                    <input type="text" name="description" value="<%= order.description %>"
                                        class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button class="btn btn-warning" type="submit">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% });%>