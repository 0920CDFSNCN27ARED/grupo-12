<!DOCTYPE html>
<html dir="ltr" lang="es">

	<head>
		<%- include('../layout/head', { title:"Crear Producto" }) %>
		<link rel="stylesheet" href="/css/components/bs-filestyle.css" type="text/css" />
		<link rel="stylesheet" href="/css/components/ion.rangeslider.css" type="text/css" />
	</head>

	<body class="stretched">

		<!--Cart Panel -->
		<%- include('../layout/panelCart') %>

		<!-- Header -->
		<header id="header" class="dark" data-sticky-class="dark-color" data-sticky-shrink-offset="0"
			data-mobile-sticky="true">
			<%- include('../layout/header') %>
		</header>

		<!-- Page Title -->
		<section id="page-title" class="checkout-page-title page-title-parallax page-title-dark"
			data-bottom-top="background-position:0px 0px;" data-top-bottom="background-position:0px 0px;">
			<%- include('../pages/pageTitle' , { title:"Editar Producto", page:"Editar Producto" }) %>
		</section>

		<!-- Content -->
		<section id="dark-content" class="dark noborder parallax pt-3">
			<div class="content-wrap">
				<div class="container clearfix">

					<% if(typeof errors != 'undefined') { %>
						<div class="col-12">
							<ul>
								<% errors.forEach(error => { %>
								<li class="text-danger"><%= error.msg %></li>
								<% });%>
							</ul>
						</div>
					<% } %>

					<div class="col-lg-12">
						<form action="/products/<%= product.id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
							<div class="row">
								<div class="col-6 form-group">
									<label for="name">Nombre de Producto:</label>
									<input type="text" name="name" class="form-control required" value="<%= product.name %>" placeholder="Cerveza IPA">
								</div>
								<div class="col-6 form-group">
									<label for="brewery">Cervería de Origen:</label>
									<input type="text" name="brewery" class="form-control" value="<%= product.brewery %>" placeholder="Quién fabrica el producto...">
								</div>
								<div class="col-6 form-group">
									<label for="price">Precio:</label>
									<input type="text" name="price" class="form-control required" value="<%= product.price %>" placeholder="Ingrese un valor">
								</div>
								<div class="col-6 form-group">
									<label for="discount">Descuento:</label>
									<input type="text" name="discount" class="form-control required" value="<%= product.discount %>" placeholder="Ingrese un valor">
								</div>
								<div class="col-6 form-group">
									<label for="stock">Stock:</label>
									<input type="number" name="stock" class="form-control required" value="<%= product.stock %>" placeholder="Ingrese un valor">
								</div>
								<div class="col-6 form-group">
									<label for="description">Descripción Corta:</label>
									<input type="text" name="description" class="form-control required" value="<%= product.description %>" placeholder="Describa brevemente el producto...">
								</div>
								<div class="col-6 form-group">
									<label for="type">Tipo:</label>
									<select class="form-control" name="type" id="type">
										<option value="lager" <%= product.type == 'lager' ? "selected" : null %>>Lager</option>
										<option value="ale" <%= product.type == 'ale' ? "selected" : null %>>Ale</option>
									</select>
								</div>
								<div class="col-6 form-group">
									<label for="category">Categoría:</label>
									<select class="form-control" name="category" id="category">
										<option value="stout" <%= product.category == 'stout' ? "selected" : null %>>Stout</option>
										<option value="pilsen" <%= product.category == 'pilsen' ? "selected" : null %>>Pilsen</option>
										<option value="porter" <%= product.category == 'porter' ? "selected" : null %>>Porter</option>
										<option value="pale-ale" <%= product.category == 'pale-ale' ? "selected" : null %>>Pale Ale</option>
										<option value="german-bock" <%= product.category == 'german-bock' ? "selected" : null %>>German Bock</option>
										<option value="apa" <%= product.category == 'apa' ? "selected" : null %>>Apa</option>
										<option value="ipa" <%= product.category == 'ipa' ? "selected" : null %>>Ipa</option>
										<option value="bunkel" <%= product.category == 'bunkel' ? "selected" : null %>>Bunkel</option>
										<option value="american-lager" <%= product.category == 'american-lager' ? "selected" : null %>>American Lager</option>
									</select>
								</div>
								
								
								<div class="col-4 form-group">
									<label for="abv" class="mb-3">ABV (% DE ALCOHOL):</label>
									<small>Valor Actual: <%= product.abv %></small> 
									<input id="abv" name="abv" value="<%= product.abv %>" class="abv required input-range-slider" />
								</div>
								<div class="col-4 form-group">
									<label for="ibu" class="mb-3">IBU (AMARGOR):</label>
									<small>Valor Actual: <%= product.ibu %></small> 
									<input name="ibu" id="ibu" value="<%= product.ibu %>" class="ibu required input-range-slider" />
								</div>
								<div class="col-4 form-group">
									<label for="og" class="mb-3">OG (Gravedad Original):</label>
									<small>Valor Actual: <%= product.og %></small> 
									<input name="og" id="og" value="<%= product.og %>" class="og required input-range-slider" />
								</div>

								<div class="col-6 form-group mt-3">
									<label for="images">Imagen Producto:</label>
									<small class="mr-2">Imagen actual</small>
									<img alt='Image' src='/images/products/<%= product.avatar ? product.avatar : "without-image.png" %>'
                                    class='avatar avatar-60 photo avatar-default mb-3' height='60' width='60' />
									<input type="file" id="avatar" name="avatar" class=" form-control" data-show-preview="true" />
								</div>

								<div class="col-6 form-group mt-3">
									<label for="images">Galería:</label>
									<small class="mr-2">Imagenes actuales</small>
									<% if(gallery){ %>
										<% gallery.forEach(image => { %>
											<img alt='Image' src='/images/products/<%= image %>'
											class='avatar avatar-60 photo avatar-default mb-3' height='60' width='60' />
										<% }); %>
									<% } else { %>
										<img alt='Image' src='/images/products/without-image.png'
										class='avatar avatar-60 photo avatar-default mb-3' height='60' width='60' />
									<% }; %> 
									<input type="file" multiple id="gallery" name="gallery" class=" form-control" data-show-preview="true" />
								</div>
								<div class="col-12 form-group mt-3">
									<label for="details">Detalles:</label>
									<input name="details" id="details" value="<%= product.details %>" class="form-control" placeholder="Descripción amplia del producto" rows="4"></input>
								</div>
								<div class="col-12">
									<button type="submit" class="btn btn-secondary">Editar Producto</button>
									<a href="/products/<%= product.id %>/productDetails" class="btn btn-outline-secondary">Cancelar</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section><!-- #content end -->

		<!-- Footer -->
		<%- include('../layout/footer') %>
		<script src="/js/components/rangeslider.min.js"></script>
		<script src="/js/components/bs-filestyle.js"></script>
		<script>
			jQuery(document).ready( function(){

				let abv = $(".abv");
				abv.ionRangeSlider({
				 	prefix: "%",
					min: 0.0,
					max: 15,
					from: 0,
					step: 0.1,
					max_postfix: "+"
				});

				let ibu = $(".ibu");
				ibu.ionRangeSlider({
				 	prefix: "",
					min: 0,
					max: 100,
					from: 0,
					step: 0.5,
					max_postfix: "+"
				});

				let og = $(".og");
				og.ionRangeSlider({
				 	prefix: "",
					min: 1000,
					max: 1200,
					from: 1000,
					step: 10,
					max_postfix: "+"
				});

				$("#avatar").fileinput({
					browseClass: "btn btn-secondary",
					browseIcon: "<i class='icon-search'></i>",
					removeClass: "btn btn-danger",
					removeLabel: "",
					removeIcon: "<i class='icon-trash-alt1'></i>",
					showUpload: false
				});

				$("#gallery").fileinput({
					browseClass: "btn btn-secondary",
					browseIcon: "<i class='icon-search'></i>",
					removeClass: "btn btn-danger",
					removeLabel: "",
					removeIcon: "<i class='icon-trash-alt1'></i>",
					showUpload: false
				});
			})
		</script>
	</body>
	
</html>