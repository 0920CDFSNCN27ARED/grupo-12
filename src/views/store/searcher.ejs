<div class="container">
    <div class="card dark-card p-4 shadow" style="top: -60px;">
        <form action="#" method="post" class="mb-0">
            <div class="row clearfix">

                <div class="col-md-8 col-sm-12 col-12 mt-md-0">
                    <label for="" class="white-color">Categoría</label>
                    <select class="form-control" title="Seleccione Categoría" style="width:100%;">
                        <optgroup label="Todas las Categorías">

                            <option class="text-capitalize" value="k">
                                lklklklk
                            </option>

                        </optgroup>
                    </select>
                    <select class="selectpicker form-control customjs" title="Seleccione Categoría" data-size="10"
                        data-live-search="true" multiple data-live-search="true" style="width:100%;">
                        <optgroup label="Todas las Categorías">
                            <% categories.forEach( category=> { %>
                                <option class="text-capitalize" value="<%= category.name %>">
                                    <%= category.name %>
                                </option>
                                <% }) %>
                        </optgroup>
                    </select>
                </div>
                <div class="col-md-2 col-sm-6 col-6 mt-1">
                    <label for="" class="d-block white-color">Tipo</label>
                    <input class="bt-switch text-capitalize" type="checkbox" checked data-on-text="lager"
                        data-off-text="ale" data-on-color="themecolor" data-off-color="themecolor">
                </div>
                <div class="col-md-2 col-sm-6 col-6 mt-1">
                    <button class="button button-rounded btn-block ml-0" style="margin-top: 29px;">Buscar</button>
                </div>
            </div>
        </form>
    </div>
</div>