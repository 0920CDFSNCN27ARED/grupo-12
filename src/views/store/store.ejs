<!DOCTYPE html>
<html dir="ltr" lang="es">

<head>
	<%- include('../layout/head', { title:"Tienda" }) %>
</head>

<body class="stretched">

	<!--Cart Panel -->
	<%- include('../layout/panelCart') %>

	<!-- Header -->
	<header id="header" class="dark" data-sticky-class="dark-color" data-sticky-shrink-offset="0"
		data-mobile-sticky="true">
		<%- include('../layout/header') %>
	</header>

	<!-- Page Title -->
	<section id="page-title" class="store-page-title page-title-parallax page-title-dark"
		data-bottom-top="background-position:0px 0px;" data-top-bottom="background-position:0px -100px;">
		<%- include('../pages/pageTitle' , { title: "Tienda", page: "Tienda" }) %>
	</section>

		<!-- Content -->
		<section id="content" class="dark-background">
			<div class="content-wrap pt-0" style="overflow: visible;">
				<div class="container">

					<div class="card dark-card p-4 shadow" style="top: -60px;">
						<form action="#" method="post" class="mb-0">
							<div class="row clearfix">
								
								<div class="col-md-8 col-sm-12 col-12 mt-md-0">
									<label for="" class="white-color">Categoría</label>
									<select class="selectpicker form-control customjs" title="Seleccione Categoría"  
										data-size="10" data-live-search="true" multiple data-live-search="true" style="width:100%;">
										<optgroup label="Todas las Categorías">
											<% categories.map( category => { %>
												<option class="text-capitalize" value="<%= category %>"><%= category %></option>
											<% }) %>
										</optgroup>
									</select>
								</div>
								<div class="col-md-2 col-sm-6 col-6 mt-1">
									<label for="" class="d-block white-color">Tipo</label>
									<input class="bt-switch text-capitalize" type="checkbox" checked data-on-text="lager" data-off-text="ale" data-on-color="themecolor" data-off-color="themecolor">
								</div>
								<div class="col-md-2 col-sm-6 col-6 mt-1">
									<button class="button button-rounded btn-block ml-0" style="margin-top: 29px;">Buscar</button>
								</div>
							</div>
						</form>
					</div>
				</div>

				<div class="section mb-0 pt-0 dark-background">
					<div class="container">

						<!-- Grid Filter
						============================================= -->
						<ul class="grid-filter style-3 w-100" data-container="#portfolio">
							<% categories.forEach( category => { %>
								<li><a href="#" data-filter=".<%= category %>" class="link-grid"><i class="icon-beer"></i><span class="ml-1 text-uppercase"><%= category %></span></a></li>
							<% }) %> 

							<!-- Show All Button -->
							<li class="activeFilter ml-auto"><a class="button button-small button-rounded button-reset" href="#" data-filter="*">Todas</a></li>
						</ul><!-- .grid-filter end -->

						<!-- Portfolio Items
						============================================= -->
						<div id="portfolio" class="portfolio row gutter-30 grid-container" data-layout="fitRows">
							<% products.forEach( product => { %>
								<%- include('./productStore', { product: product }) %>
							<% }) %> 
						</div>
					</div>
				</div>
			</div>
		</section><!-- #content end -->

	<!-- Footer -->
	<%- include('../layout/footer') %>
		
</body>
		
</html>